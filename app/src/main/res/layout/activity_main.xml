<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/page">


    <Button
            android:layout_width="73dp"
            android:layout_height="75dp"
            android:id="@+id/button" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:onClick="submit"
    />
    <Button
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:id="@+id/button2" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginStart="20dp"
            android:onClick="submit"
    />
    <Button
            android:layout_width="69dp"
            android:layout_height="72dp"
            android:id="@+id/button3" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="20dp"
            android:onClick="submit"
    />
    <Button
            android:layout_width="66dp"
            android:layout_height="71dp"
            android:id="@+id/button4" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginStart="16dp"
            android:onClick="submit"
    />
    <SeekBar
            android:layout_width="374dp"
            android:layout_height="19dp"
            android:id="@+id/alpha"
            app:layout_constraintTop_toBottomOf="@+id/button3" android:layout_marginTop="108dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <SeekBar
            android:layout_width="375dp"
            android:layout_height="17dp"
            android:id="@+id/red" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/alpha" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>
    <SeekBar
            android:layout_width="382dp"
            android:layout_height="21dp"
            android:id="@+id/green" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/red" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <SeekBar
            android:layout_width="380dp"
            android:layout_height="21dp"
            android:id="@+id/blue"
            app:layout_constraintTop_toBottomOf="@+id/green" android:layout_marginTop="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
</android.support.constraint.ConstraintLayout>